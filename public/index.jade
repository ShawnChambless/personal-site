doctype html
html
    head
        title Shawn Chambless
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href='styles/main.css' rel='stylesheet')
    body(ng-app='personalSite' ng-controller='homeCtrl')
        header.centered-navigation(role='banner')
          .centered-navigation-wrapper
            a#js-centered-navigation-mobile-menu.centered-navigation-mobile-menu(href='javascript:void(0)') MENU
            nav(role='navigation')
              ul#js-centered-navigation-menu.centered-navigation-menu.show
                li.nav-link
                    a(href='#/') Home
                li.nav-link
                  a(href='#/projects') Projects
                li.nav-link
                  a(ng-href='#/about') About
            
        ng-view
        footer.footer-2(role='contentinfo')
            ul.social
                li
                    a(ng-href='https://github.com/ShawnChambless' target='_blank')
                        img.navImage(ng-src='assets/images/Octocat-min.png')
                li
                    a(ng-href='https://www.linkedin.com/in/shawnchambless' target='_blank')
                        img.navImage.linkedIn(ng-src='assets/images/linkedinSmall-min.png')
                li
                    a(ng-href='https://twitter.com/ShawnChambless' target='_blank')
                        img.navImage.twitter(ng-src='assets/images/twitterSmall-min.png')
        script.
